import java.util.Scanner;

public class Main {
	 public static void main(String[] args) {
		System.out.println("Start directory listner \"esc\" to cancel:");
		//start thread
		Scanner sc = new Scanner(System.in); 
		for(;;){
			//wait for cancel
			if (sc.hasNext()){
				if(sc.next()=="k") break;
			}
			
		}
		System.out.println("Directory listner stoped");
	}

}
